{
    "swagger": "2.0",
    "info": {
        "contact": {}
    },
    "paths": {
        "/pullRequest/create": {
            "post": {
                "description": "Создает новый pull request и назначает ревьювера",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "PullRequests"
                ],
                "summary": "Создать PR и автоматически назначить до 2 ревьюверов из команды автора",
                "parameters": [
                    {
                        "description": "Данные для создания PR",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/httpapi.CreatePRRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/httpapi.PullRequestResponse"
                        }
                    },
                    "404": {
                        "description": "Автор/команда не найдены",
                        "schema": {
                            "$ref": "#/definitions/httpapi.ErrorResponse"
                        }
                    },
                    "409": {
                        "description": "PR уже существует",
                        "schema": {
                            "$ref": "#/definitions/httpapi.ErrorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "httpapi.CreatePRRequest": {
            "type": "object",
            "properties": {
                "author_id": {
                    "type": "string",
                    "example": "u1"
                },
                "pull_request_id": {
                    "type": "string",
                    "example": "pr-1001"
                },
                "pull_request_name": {
                    "type": "string",
                    "example": "Add search"
                }
            }
        },
        "httpapi.ErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "object",
                    "properties": {
                        "code": {
                            "type": "string"
                        },
                        "message": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "httpapi.PullRequestResponse": {
            "type": "object",
            "properties": {
                "pr": {
                    "type": "object",
                    "properties": {
                        "assigned_reviewers": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "example": [
                                "u2",
                                "u3"
                            ]
                        },
                        "author_id": {
                            "type": "string",
                            "example": "u1"
                        },
                        "pull_request_id": {
                            "type": "string",
                            "example": "pr-1001"
                        },
                        "pull_request_name": {
                            "type": "string",
                            "example": "Add search"
                        },
                        "status": {
                            "type": "string",
                            "example": "OPEN"
                        }
                    }
                }
            }
        }
    }
}